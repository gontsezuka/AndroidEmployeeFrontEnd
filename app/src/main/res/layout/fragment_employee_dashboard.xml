<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginBottom="60dp"
        >

        <TextView
            android:layout_marginTop="100dp"
            android:text="EMPLOYEE DASHBOARD"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/fragment_employee_dashboard_txt_list_total_employees"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Employees"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >

            </TextView>

            <Button
                android:id="@+id/fragment_employee_dashboard_btn_view_list_employees"
                android:text="View"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow"
                >

            </Button>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_employee_dashboard_txt_list_total_meetings_today"
                android:layout_marginTop="40dp"
                android:textSize="28sp"
                android:text="10"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FFFFFF"
                android:text="Todays Meetings"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></TextView>


            <Button
                android:id="@+id/fragment_employee_dashboard_btn_view_meetings_today"
                android:background="#FFFFFF"
                android:text="View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow"
                >

            </Button>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>